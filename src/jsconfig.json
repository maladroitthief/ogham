{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      // THESE PATHS ARE ONLY FOR VSCODE INTELLISENSE
      // THEY DO NOT IMPACT THE ACTUAL APPLICATION
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"],
      "@store/*": ["./store/*"],
      "@utils/*": ["./utils/*"],
      "@views/*": ["./views/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "build"]
}
